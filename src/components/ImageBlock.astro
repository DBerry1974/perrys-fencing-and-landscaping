---
import { Image } from 'astro:assets'
import  Button  from "./Buttons/PrimaryButton.astro"

interface Props {
  background?: string;
  title?: string;
  largeTitle?: string;
  extraText?: string;
  description?: string;
  linkText?: string;
  href?: string;
  Button?: string;
  spanTitle?: string;
  titleSpan?: string; 
  spanTitleNext?: string;
  ImageAlt: string;
}
const {
  background,
  title,
  largeTitle,
  extraText,
  description,
  linkText,
  href,
  spanTitle,
  titleSpan,
  spanTitleNext,
  ImageAlt
} = Astro.props;
---
<div class="w-full mb-10 mt-10 md:mt-0">

<div class="relative overflow-hidden py-10"
>
<div class="relative min-h-fit sm:min-h-0 overflow-hidden">
    <div class="absolute inset-0">
      <Image
      class="absolute lg:w-screen top-1/2 left-1/2 max-w-none -translate-x-1/2 -translate-y-1/2"
        src={background}
        alt="Home coating solutions"
        width={800}
        aspectRatio={16 / 9}
        fit="cover"
        loading="eager"
        format="webp"
      />
  <div class="absolute inset-0 lg:bg-black lg:opacity-90 "></div> 
  <div class="relative">
    <div class="mx-auto max-w-6xl px-6 text-center">
      <h2
        class="font-bold text-3xl tracking-tight text-white sm:text-5xl"
      >
        {title}
      </h2>
      <h2
        class="font-extrabold text-3xl tracking-tight text-white sm:text-6xl"
      >
        {largeTitle}
      </h2>
      <h2
        class="font-display inline font-extrabold text-3xl tracking-tight text-white sm:text-6xl"
      >
      {spanTitle}</h2>
      <span class="text-orange-500 font-display inline font-extrabold text-3xl tracking-tight sm:text-6xl">{titleSpan}</span>
      <h2
      class="font-display inline font-extrabold text-3xl tracking-tight text-white sm:text-6xl"
    >
      {spanTitleNext}</h2>

      <!--<p class="mt-4 text-xl tracking-tight text-white">
        {description}
      </p>-->

      <div class="mt-6">
        <div class="mx-auto max-w-5xl md:text-lg md:leading-8 text-white">
          <slot name="ctaContent" />
        </div>

      <Button href={href} newTab rel className="mt-10">  
        {linkText}
      </Button> 
    </div>
    <div class="mx-auto max-w-5xl md:text-lg md:leading-8 text-white">
      <slot name="extraText" />
    </div>
  </div>
</div>
</div>